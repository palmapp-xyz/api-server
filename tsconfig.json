{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "outDir": "./lib/",
    "declaration": true,
    "declarationDir": "./lib/",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./**/src/**/*"],
  "exclude": ["node_modules", "lib"]
}