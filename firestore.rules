rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /moralis/{collectionType}/{collectionName}/{id} {
      allow read;
      allow write: if false;
    }
    match /profile/{id} {
    	allow read;
      allow create: if request.resource.id == request.auth.token.displayName && request.resource.data.keys().hasAll(['nft_image_url', 'nft_contract_addr', 'nft_tokenId', 'bio', 'user_name', 'sendbird_token']);
      allow update: if request.auth.token.displayName == resource.id
    }
  }
}
